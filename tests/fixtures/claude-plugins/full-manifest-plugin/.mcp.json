{
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": ["${CLAUDE_PLUGIN_ROOT}/mcp/fs-server.js"],
      "env": {
        "DEBUG": "true"
      }
    },
    "remote-api": {
      "type": "http",
      "url": "https://api.example.com/mcp",
      "headers": {
        "Authorization": "Bearer ${API_KEY}"
      }
    },
    "remote-sse": {
      "type": "sse",
      "url": "https://api.example.com/mcp/sse",
      "headers": {
        "Authorization": "Bearer ${API_KEY}"
      }
    }
  }
}

