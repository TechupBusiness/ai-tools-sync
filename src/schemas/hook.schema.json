{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-tool-sync.dev/schemas/hook.schema.json",
  "title": "AI Tool Sync Hook",
  "description": "Schema for hook file frontmatter",
  "type": "object",
  "required": ["name", "event"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the hook"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the hook"
    },
    "version": {
      "type": "string",
      "description": "Hook version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "event": {
      "type": "string",
      "description": "Event that triggers this hook",
      "enum": ["PreToolUse", "PostToolUse", "PreMessage", "PostMessage", "PreCommit"]
    },
    "tool_match": {
      "type": "string",
      "description": "Pattern to match tools (e.g., 'Bash(git commit*)')"
    },
    "execute": {
      "type": "string",
      "description": "Script or command to execute"
    },
    "targets": {
      "type": "array",
      "description": "Target tools for this hook",
      "items": {
        "type": "string",
        "enum": ["cursor", "claude", "factory"]
      },
      "default": ["cursor", "claude", "factory"]
    },
    "cursor": { "$ref": "#/$defs/cursorExtension" },
    "claude": { "$ref": "#/$defs/claudeExtension" },
    "factory": { "$ref": "#/$defs/factoryExtension" }
  },
  "additionalProperties": false,
  "$defs": {
    "cursorExtension": {
      "type": "object",
      "description": "Cursor-specific overrides",
      "properties": {
        "event": {
          "type": "string",
          "description": "Cursor-specific event name",
          "enum": ["beforeSubmitPrompt", "beforeShellExecution", "beforeMCPExecution", "beforeReadFile", "afterFileEdit", "stop"]
        }
      },
      "additionalProperties": true
    },
    "claudeExtension": {
      "type": "object",
      "description": "Claude Code-specific overrides",
      "properties": {
        "event": {
          "type": "string",
          "description": "Claude-specific event name",
          "enum": ["PreToolUse", "PostToolUse", "UserPromptSubmit", "Notification", "Stop", "SubagentStop", "SessionStart", "SessionEnd", "PreCompact"]
        },
        "match": { "type": "string" }
      },
      "additionalProperties": true
    },
    "factoryExtension": {
      "type": "object",
      "description": "Factory-specific overrides",
      "properties": {
        "event": {
          "type": "string",
          "description": "Factory-specific event name"
        },
        "matcher": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
