{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-tool-sync.dev/schemas/rule.schema.json",
  "title": "AI Tool Sync Rule",
  "description": "Schema for rule file frontmatter",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the rule"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the rule"
    },
    "version": {
      "type": "string",
      "description": "Rule version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "always_apply": {
      "type": "boolean",
      "description": "Always load this rule regardless of context",
      "default": false
    },
    "globs": {
      "type": "array",
      "description": "Glob patterns to trigger this rule",
      "items": { "type": "string" }
    },
    "targets": {
      "type": "array",
      "description": "Target tools for this rule",
      "items": {
        "type": "string",
        "enum": ["cursor", "claude", "factory"]
      },
      "default": ["cursor", "claude", "factory"]
    },
    "requires": {
      "type": "array",
      "description": "Other rules that must be loaded with this rule",
      "items": { "type": "string" }
    },
    "category": {
      "type": "string",
      "description": "Category for organization",
      "enum": ["core", "infrastructure", "testing", "security", "documentation", "tooling", "other"]
    },
    "priority": {
      "type": "string",
      "description": "Priority level for rule ordering",
      "enum": ["low", "medium", "high"],
      "default": "medium"
    },
    "cursor": { "$ref": "#/$defs/cursorExtension" },
    "claude": { "$ref": "#/$defs/claudeExtension" },
    "factory": { "$ref": "#/$defs/factoryExtension" }
  },
  "additionalProperties": false,
  "$defs": {
    "cursorExtension": {
      "type": "object",
      "description": "Cursor-specific overrides",
      "properties": {
        "alwaysApply": { "type": "boolean" },
        "globs": { "type": "array", "items": { "type": "string" } },
        "description": { "type": "string" }
      },
      "additionalProperties": true
    },
    "claudeExtension": {
      "type": "object",
      "description": "Claude Code-specific overrides",
      "properties": {
        "import_as_skill": { "type": "boolean" },
        "tools": { "type": "array", "items": { "type": "string" } },
        "model": { "type": "string" }
      },
      "additionalProperties": true
    },
    "factoryExtension": {
      "type": "object",
      "description": "Factory-specific overrides",
      "properties": {
        "allowed-tools": { "type": "array", "items": { "type": "string" } },
        "tools": { "type": "array", "items": { "type": "string" } },
        "model": { "type": "string" },
        "reasoningEffort": { "type": "string", "enum": ["low", "medium", "high"] }
      },
      "additionalProperties": true
    }
  }
}
