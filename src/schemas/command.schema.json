{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-tool-sync.dev/schemas/command.schema.json",
  "title": "AI Tool Sync Command",
  "description": "Schema for command file frontmatter",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the command"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the command"
    },
    "version": {
      "type": "string",
      "description": "Command version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "execute": {
      "type": "string",
      "description": "Script or command to execute"
    },
    "args": {
      "type": "array",
      "description": "Command arguments",
      "items": { "$ref": "#/$defs/arg" }
    },
    "globs": {
      "type": "array",
      "description": "Glob patterns where command is relevant",
      "items": { "type": "string" }
    },
    "allowedTools": {
      "type": "array",
      "description": "Tool restrictions for Cursor commands",
      "items": { "type": "string" }
    },
    "variables": {
      "type": "array",
      "description": "Variable placeholders supported in command content",
      "items": { "$ref": "#/$defs/variable" }
    },
    "targets": {
      "type": "array",
      "description": "Target tools for this command",
      "items": {
        "type": "string",
        "enum": ["cursor", "claude", "factory"]
      },
      "default": ["cursor", "claude", "factory"]
    },
    "cursor": { "$ref": "#/$defs/cursorExtension" },
    "claude": { "$ref": "#/$defs/claudeExtension" },
    "factory": { "$ref": "#/$defs/factoryExtension" }
  },
  "additionalProperties": false,
  "$defs": {
    "arg": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Argument name"
        },
        "type": {
          "type": "string",
          "description": "Argument type",
          "enum": ["string", "number", "boolean"]
        },
        "description": {
          "type": "string",
          "description": "Argument description"
        },
        "default": {
          "description": "Default value for the argument"
        },
        "choices": {
          "type": "array",
          "description": "Allowed values for the argument",
          "items": {}
        },
        "required": {
          "type": "boolean",
          "description": "Whether the argument is required",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "variable": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Variable name (e.g., ARGUMENTS)"
        },
        "description": {
          "type": "string",
          "description": "Variable description for documentation"
        },
        "default": {
          "type": "string",
          "description": "Default value if not provided"
        }
      },
      "additionalProperties": false
    },
    "cursorExtension": {
      "type": "object",
      "description": "Cursor-specific overrides",
      "properties": {
        "alwaysApply": { "type": "boolean" },
        "globs": { "type": "array", "items": { "type": "string" } },
        "description": { "type": "string" },
        "allowedTools": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "claudeExtension": {
      "type": "object",
      "description": "Claude Code-specific overrides",
      "properties": {
        "import_as_skill": { "type": "boolean" },
        "tools": { "type": "array", "items": { "type": "string" } },
        "model": { "type": "string" }
      },
      "additionalProperties": true
    },
    "factoryExtension": {
      "type": "object",
      "description": "Factory-specific overrides",
      "properties": {
        "allowed-tools": { "type": "array", "items": { "type": "string" } },
        "tools": { "type": "array", "items": { "type": "string" } },
        "model": { "type": "string" },
        "reasoningEffort": { "type": "string", "enum": ["low", "medium", "high"] }
      },
      "additionalProperties": true
    }
  }
}
